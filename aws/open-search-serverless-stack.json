{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template for Open Search Serverless",
  "Parameters": {
    "DynamoDBStackName": {
      "Description": "The name of an existing dynamodb stack",
      "Type": "String",
      "ConstraintDescription": "must be the name of an existing stack name."
    },
    "S3StackName": {
      "Description": "The name of an existing s3 stack",
      "Type": "String",
      "ConstraintDescription": "must be the name of an existing stack name."
    }
  },
  "Resources": {
    "IAMRoleForLambda": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "temp-nextjs-test-for-lambda-for-dynamodb-to-opensearch-iam-role",
              {
                "Ref": "AWS::Region"
              }
            ]
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sts:AssumeRole"
              ],
              "Principal": {
                "Service": "lambda.amazonaws.com"
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "AccessToCloudWatch",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "logs:CreateLogGroup",
                  "Resource": {
                    "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:*"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/temp-nextjs-test-lambda-for-dynamodb-to-opensearch:*"
                    }
                  ]
                }
              ]
            }
          },
          {
            "PolicyName": "S3GetObjectAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": [
                        "${S3Bucket}/*",
                        {
                          "S3Bucket": {
                            "Fn::ImportValue": {
                              "Fn::Sub": "${S3StackName}-S3Bucket"
                            }
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          },
          {
            "PolicyName": "DynamoDBStreamAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:DescribeStream",
                    "dynamodb:GetRecords",
                    "dynamodb:GetShardIterator",
                    "dynamodb:ListStreams"
                  ],
                  "Resource": [
                    {
                      "Fn::ImportValue": {
                        "Fn::Sub": "${DynamoDBStackName}-DynamoDBStreamArn"
                      }
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "OpenSearchAccessPolicy": {
      "Type": "AWS::OpenSearchServerless::AccessPolicy",
      "Properties": {
        "Name": "temp-nextjs-test-osc-ap",
        "Policy": {
          "Fn::Join": [
            "",
            [
              {
                "Fn::Sub": "[{\"Rules\":[{\"ResourceType\":\"index\",\"Resource\":[\"index/temp-nextjs-test-osc/*\"],\"Permission\":[\"aoss:*\"]}, {\"ResourceType\":\"collection\",\"Resource\":[\"collection/temp-nextjs-test-osc\"],\"Permission\":[\"aoss:*\"]}], \"Principal\":[\"arn:aws:iam::${AWS::AccountId}:user/"
              },
              {
                "Ref": "IAMRoleForLambda"
              },
              "\"]}]"
            ]
          ]
        },
        "Type": "data"
      }
    },
    "OpenSearchEncryptionPolicy": {
      "Type": "AWS::OpenSearchServerless::SecurityPolicy",
      "Properties": {
        "Name": "temp-nextjs-test-osc-sp",
        "Policy": "{\"Rules\":[{\"ResourceType\":\"collection\",\"Resource\":[\"collection/temp-nextjs-test-osc\"]}],\"AWSOwnedKey\":true}",
        "Type": "encryption"
      }
    },
    "OpenSearchNetworkPolicy": {
      "Type": "AWS::OpenSearchServerless::SecurityPolicy",
      "Properties": {
        "Name": "temp-nextjs-test-osc-np",
        "Policy": "[{\"Rules\":[{\"ResourceType\":\"collection\",\"Resource\":[\"collection/temp-nextjs-test-osc\"]},{\"ResourceType\":\"dashboard\",\"Resource\":[\"collection/temp-nextjs-test-osc\"]}],\"AllowFromPublic\":true}]",
        "Type": "network"
      }
    },
    "OpenSearchCollection": {
      "Type": "AWS::OpenSearchServerless::Collection",
      "DependsOn": "OpenSearchEncryptionPolicy",
      "Properties": {
        "Name": "temp-nextjs-test-osc",
        "Type": "SEARCH"
      }
    },
    "Lambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "temp-nextjs-test-lambda-for-dynamodb-to-opensearch",
        "PackageType": "Zip",
        "Code": {
          "S3Bucket": {
            "Fn::ImportValue": {
              "Fn::Sub": "${S3StackName}-S3Bucket"
            }
          },
          "S3Key": "dynamodb-to-opensearch.zip"
        },
        "Handler": "index.handler",
        "Runtime": "nodejs18.x",
        "Environment": {
          "Variables": {
            "AWS_OPENSEARCH_ENDPOINT": {
              "Fn::GetAtt": [
                "OpenSearchCollection",
                "CollectionEndpoint"
              ]
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IAMRoleForLambda",
            "Arn"
          ]
        }
      }
    }
  },
  "Outputs": {
    "OpenSearchDashboardEndpoint": {
      "Value": {
        "Fn::GetAtt": [
          "OpenSearchCollection",
          "DashboardEndpoint"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-OpenSearchDashboardEndpoint"
        }
      }
    }
  }
}